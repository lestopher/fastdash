<h3>Current Connections</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Host</th>
      <th>Port</th>
      <th>Socket</th>
      <th>Username</th>
      <th>Password</th>
      <th>Database</th>
      <th>Encoding</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.host %></td>
        <td><%= connection.port %></td>
        <td><%= connection.socket %></td>
        <td><%= connection.username %></td>
        <td><%= connection.password %></td>
        <td><%= connection.database %></td>
        <td><%= connection.encoding %></td>
        <td>
          <a href="<%= connection_path(connection) %>">Show</a>
        </td>
        <td><a href="<%= edit_connection_path(connection) %>"><span class="glyphicon glyphicon-edit"></span>Edit</a></td>
        <td><%= link_to 'Delete', connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="<%= new_connection_path %>" class="btn btn-primary">New Connection</a>
